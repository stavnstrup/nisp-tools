<!ENTITY % DocBookDTD PUBLIC "-//OASIS//DTD DocBook XML V4.5//EN"
                             "docbkx45/docbookx.dtd">
%DocBookDTD;


<!-- ...................................................................... -->


<!ELEMENT standards (revhistory?, taxonomy, bestpracticeprofile, records, organisations, responsibleparties)>
<!ATTLIST standards
          revision CDATA #REQUIRED>

<!-- .......................... TAXONOMY .................................. -->

<!ELEMENT taxonomy (node+)>

<!ELEMENT node (node*)>
<!ATTLIST node
          id ID #REQUIRED
          title CDATA #REQUIRED
          level CDATA #REQUIRED
          emUUID CDATA #REQUIRED>


<!-- .......................... LISTS .................................. -->


<!ELEMENT bestpracticeprofile (bpserviceprofile*)>

<!ELEMENT bpserviceprofile (bpgroup*)>
<!ATTLIST bpserviceprofile
          tref IDREF #REQUIRED
          genTitle CDATA #IMPLIED>

<!ELEMENT bpgroup (bprefstandard+)>
<!ATTLIST bpgroup
          mode (unknown|mandatory|emerging|fading) #REQUIRED>



<!ELEMENT bprefstandard (#PCDATA)>
<!ATTLIST bprefstandard
          refid IDREF #REQUIRED>

<!-- .......................... RECORDS .................................. -->


<!ELEMENT records ((standard | serviceprofile | capabilityprofile)*)>

<!ELEMENT standard (document, applicability, responsibleparty?, status, uuid?)>
<!ATTLIST standard
          tag CDATA #REQUIRED
          id ID #REQUIRED>

<!-- document -->

<!ELEMENT document (substandards?, correction*, alsoknown?, comment?)>
<!ATTLIST document
          orgid   CDATA #REQUIRED
          pubnum  CDATA #REQUIRED
          date    CDATA #REQUIRED
          title   CDATA #REQUIRED
          version CDATA #IMPLIED>

<!ELEMENT substandards (substandard+)>

<!ELEMENT substandard EMPTY>
<!ATTLIST substandard
          refid IDREF #REQUIRED>

<!ELEMENT correction (#PCDATA)>
<!ATTLIST correction
          cpubnum  CDATA #REQUIRED
          date     CDATA #REQUIRED>

<!ELEMENT alsoknown (#PCDATA)>
<!ATTLIST alsoknown
          orgid   CDATA #REQUIRED
          pubnum  CDATA #REQUIRED
          date    CDATA #REQUIRED>

<!ELEMENT comment (#PCDATA | ulink)*>


<!-- applicability -->

<!ELEMENT applicability %ho; (%tbl.entry.mdl;)*>

<!-- responsibleparty -->

<!ELEMENT responsibleparty (reevaluation?)>
<!ATTLIST responsibleparty
	  rpref   CDATA  #REQUIRED
	  comment CDATA  #IMPLIED>

<!ELEMENT reevaluation EMPTY>
<!ATTLIST reevaluation
	  date    CDATA  #REQUIRED
	  comment CDATA  #IMPLIED>

<!-- status -->

<!ELEMENT status (info?, uri?, history)>
<!ATTLIST status
          mode   (accepted|rejected) "accepted">

<!ELEMENT info (#PCDATA | ulink)*>

<!ELEMENT history (event)+>

<!ELEMENT event (#PCDATA)>
<!ATTLIST event
          flag    (added|changed|deleted)   #REQUIRED
          date    CDATA   #REQUIRED
          rfcp    CDATA   #IMPLIED
          version CDATA   #REQUIRED>


<!ELEMENT uuid (#PCDATA)>

<!-- profiles -->



<!ELEMENT capabilityprofile (profile*,  uuid?)>
<!ATTLIST capabilityprofile
          id ID #REQUIRED
          title CDATA #REQUIRED>


<!ELEMENT profile ((serviceprofile | profile),  uuid?)*>
<!ATTLIST profile
          id ID #REQUIRED
          title CDATA #REQUIRED>


<!ELEMENT serviceprofile (description?, reftaxonomy+, obgroup+, guide*,  uuid?)>
<!ATTLIST serviceprofile
          title CDATA #REQUIRED>

<!ELEMENT description  %ho; (%tbl.entry.mdl;)*>

<!ELEMENT reftaxonomy EMPTY>
<!ATTLIST reftaxonomy
          refid IDREF #REQUIRED>

<!ELEMENT obgroup (description?, refstandard*)>
<!ATTLIST obgroup
          obligation (mandatory|recommended|optional|conditional) #REQUIRED>

<!ELEMENT refstandard EMPTY>
<!ATTLIST refstandard
          refid IDREF #REQUIRED>

<!ELEMENT guide %ho; (%tbl.entry.mdl;)*>


<!ELEMENT guidance %ho; (%tbl.entry.mdl;)*>


<!ELEMENT cgroup (refstandard|refprofile)+>
<!ATTLIST cgroup
	  condition CDATA #REQUIRED>



<!ELEMENT refstandard1 EMPTY>
<!ATTLIST refstandard1
          refid IDREF #REQUIRED
	  lctime CDATA #IMPLIED>

<!ELEMENT refprofile EMPTY>
<!ATTLIST refprofile
          refid IDREF #REQUIRED
	  lctime CDATA #IMPLIED>



<!-- applicability content model identical to DocBook entry -->


<!-- ....................... ORGANISATION ................................ -->


<!ELEMENT organisations (orgkey*)>

<!ELEMENT orgkey EMPTY>
<!ATTLIST orgkey
          key    CDATA   #REQUIRED
          short  CDATA   #REQUIRED
          text   CDATA   #REQUIRED>


<!ELEMENT header EMPTY>


<!-- .........................RESPONSIBLE PARTIES.......................... -->

<!ELEMENT responsibleparties (rpkey*)>

<!ELEMENT rpkey (pointofcontact*)>

<!ATTLIST rpkey
	  key    CDATA #REQUIRED
	  short  CDATA #REQUIRED
	  long   CDATA #REQUIRED>

<!ELEMENT pointofcontact EMPTY>
<!ATTLIST pointofcontact
	  name   CDATA   #REQUIRED
	  email  CDATA   #REQUIRED
	  phone  CDATA   #IMPLIED>


